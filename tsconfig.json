{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "lib": [ "es2015", "dom" ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "bower_components",
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useTranspileModule": true,
    "usePrecompiledFiles": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false
}
